---
import Layout from '../layouts/Layout.astro';
import NavButton from '../components/NavButton.svelte';
import ContentRouter from '../components/ContentRouter.svelte';

---

<Layout title="fjallnari">
	<main class="lg:w-2/5 p-4 max-w-[100% - 2rem] m-auto lg:mt-24 h-full">
		<div class="flex flex-col gap-8">
			<div class="flex flex-row items-center gap-4">
				<svg class="fill-timberwolf w-16 h-16" style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:2" viewBox="0 0 200 200">
					<path d="M0 0h200v200H0z" style="fill:none"/>
					<path d="M82.919 86.319 62.656 57.71l28.609 20.263 5.901-59.816 5.901 59.816 12.869-4.523-4.523 12.869 76.858 5.901-76.858 5.902 41.25 49.596-49.596-41.251-5.901 75.376-5.901-75.376-19.346 11 11-19.345L70.65 92.22l12.269-5.901Zm22.329 5.901-8.082-8.082-8.082 8.082 8.082 8.083 8.082-8.083Z"/>
				</svg>
				<div class="flex flex-col">
					<p class="text-xl">hi, I'm <span class="bold text-oxford-300">fjallnari</span></p>
					<p>full-stack developer with passion for graphic design</p>
				</div>
			</div>
			<div class="flex flex-row lg:ml-8 items-center flex-wrap gap-4 p-2 rounded shadow bg-oxford-800">
				<NavButton title="projects" client:load />|
				<NavButton title="blog" client:load />|
				<!-- <NavButton title="education" client:load />| -->
				<NavButton title="about" client:load />
			</div>
			<ContentRouter client:load />
		</div>
	</main>
</Layout>